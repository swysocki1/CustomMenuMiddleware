        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
            "description":"Food Object needed to be updated",
            "required":true,
            "schema":{
              "$ref":"#/definitions/Food"
            }
          }
        ],
        "responses":{
          "200": {
            "description": "Successful Connection",
