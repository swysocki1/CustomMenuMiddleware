{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Custom Menu API",
    "description": "A simple API used to build customized Menu's for local restaurants."
  },
  "schemes": [
    "http"
  ],
  "host": "localhost:4201",
  "basePath": "",
  "paths": {
    "/ping": {
      "tags":[
        "Test"
      ],
      "get": {
        "summary": "Test Connection to Server",
        "description": "Send a ping to test connecting to server.",
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "JSON",
              "items": {
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/authenticate": {
      "tags":[
        "Login"
      ],
      "post": {
        "summary": "Test Connection to Server",
        "description": "Send a ping to test connecting to server.",
        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Username & Password Authentication",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "JSON",
              "items": {
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/restaurant/{restaurantId}": {
      "get": {
        "tags":[
          "Restaurant"
        ],
        "summary": "Get Restaurant by ID",
        "description": "Retrieve Restaurant Object by ID.",
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "description": "ID of Restaurant to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Restaurant"
              }
            }
          }
        }
      }
    },
    "/menu/{menuId}": {
      "get": {
        "tags":[
          "Menu"
        ],
        "summary": "Get Menu by ID",
        "description": "Retrieve Menu Object by ID.",
        "parameters": [
          {
            "name": "menuId",
            "in": "path",
            "description": "ID of Menu to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Menu"
              }
            }
          }
        }
      }
    },
    "/menu/create":{
      "post":{
        "tags":[
          "Menu"
        ],
        "summary":"Create New Menu",
        "description":"Create a new menu object by passing the full menu object JSON in the body",
        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
            "description":"Menu Object needed to be created",
            "required":true,
            "schema":{
              "$ref":"#/definitions/Menu"
            }
          }
        ],
        "responses":{
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Menu"
              }
            }
          }
        }
      }
    },
    "/menu-section/{menuSectionId}": {
      "get": {
        "tags":[
          "Menu Section"
        ],
        "summary": "Get Menu Section by ID",
        "description": "Retrieve Menu Section Object by ID.",
        "parameters": [
          {
            "name": "menuSectionId",
            "in": "path",
            "description": "ID of Menu Section to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MenuSection"
              }
            }
          }
        }
      }
    },
    "/menu-section/create":{
      "post":{
        "tags":[
          "Menu Section"
        ],
        "summary":"Create New Menu Section",
        "description":"Create a new menu object by passing the full menu object JSON in the body",
        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
            "description":"Menu Section Object needed to be created",
            "required":true,
            "schema":{
              "$ref":"#/definitions/MenuSection"
            }
          }
        ],
        "responses":{
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MenuSection"
              }
            }
          }
        }
      }
    },
    "/food/{foodId}": {
      "get": {
        "tags":[
          "Food"
        ],
        "summary": "Get Food by ID",
        "description": "Retrieve Food Object by ID.",
        "parameters": [
          {
            "name": "foodId",
            "in": "path",
            "description": "ID of Food to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Food"
              }
            }
          }
        }
      }
    },
    "/food/create":{
      "post":{
        "tags":[
          "Food"
        ],
        "summary":"Create New Food",
        "description":"Create a new menu object by passing the full menu object JSON in the body",
        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters":[
          {
            "in":"body",
            "name":"body",
